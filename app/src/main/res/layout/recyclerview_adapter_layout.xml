<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    cardView:cardCornerRadius="10dp"
    android:layout_margin="8dp"
    cardView:cardElevation="58dp"
    cardView:cardBackgroundColor="@color/transparent_dark_lighter"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        >

        <TextView

            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            cardView:layout_constraintTop_toTopOf="parent"
            cardView:layout_constraintLeft_toLeftOf="parent"
            cardView:layout_constraintRight_toRightOf="parent"
            cardView:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold"
            tools:text="@tools:sample/full_names"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/primary_light_color" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>